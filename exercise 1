/* Control on software Requests */
INSERT INTO SoftwareRequests(
Request_Start_Date ,
Request_Close_Date,
Status ) VALUES
('2020-09-13','2021-01-01', 'Available')
UPDATE TABLE Services SET NumberOfInstallments = NumberOfInstallments + 1 Where SoftwareRequests.Software_ID= Services.Software_ID;
CREATE TRIGGER control_softwarerequests
    BEFORE INSERT ON SoftwareRequests
    BEGIN
        SELECT CASE
            WHEN Request_Close_Date < Request_Start_Date;
            RAISE (ABORT, 'Check the date')
        END;
    END;
