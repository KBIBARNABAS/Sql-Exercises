/* Creating the tables */
CREATE TABLE "Employer"(Employer_ID INTEGER PRIMARY KEY, 
FullName TEXT, JoiningDate DATE FORMAT "yyyy-mm-dd",
CurrentPosition TEXT,
Department TEXT, 
AssignedProject_Client TEXT);

CREATE TABLE "Services"(Software_ID INTEGER PRIMARY KEY, 
Name TEXT,
Category TEXT,
Size INTEGER,
NumberOfInstallments INTEGER );

CREATE TABLE "SoftwareRequests"(
 SRequest_ID INTEGER Primary KEY,
Employer_ID INTEGER ,
Software_ID INTEGER ,
Request_Start_Date  DATE FORMAT "yyyy-mm-dd",
Request_Close_Date  DATE FORMAT "yyyy-mm-dd",
Status TEXT);

