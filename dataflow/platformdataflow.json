{
	"name": "platformdataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "rawpicker",
						"type": "DatasetReference"
					},
					"name": "platform"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "sendtransformed",
						"type": "DatasetReference"
					},
					"name": "platformransformed"
				}
			],
			"transformations": [
				{
					"name": "ModifyColumns1",
					"description": "Autogenerated by data preview actions"
				},
				{
					"name": "RemoveColumns1",
					"description": "Autogenerated by data preview actions"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> platform",
				"platform derive(each(match(name=='PlatformID'), $$ = toLong($$)),",
				"          each(match(name=='PlatformID'), $$ = toLong($$))) ~> ModifyColumns1",
				"ModifyColumns1 select(mapColumn(",
				"          each(match(name!='TRIAL681'))",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> RemoveColumns1",
				"RemoveColumns1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['platformtransformed'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> platformransformed"
			]
		}
	}
}